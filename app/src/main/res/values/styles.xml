<?xml version="1.0" encoding="utf-8"?>

<resources>
    <!-- define colors used inside the app-->
    <color name="colorPrimary">#2196F3</color>
    <color name="recycleItemColor">#fffafff8</color>
    <color name="toolbarColor">#2196F3</color>

    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="searchViewStyle">@style/AppTheme.SearchView</item>
    </style>

<style name="AppTheme.SearchView" parent="Widget.AppCompat.SearchView">
    <item name="searchIcon">@drawable/ic_action_search</item>
    <item name="closeIcon">@drawable/ic_action_close</item>
</style>

</resources>